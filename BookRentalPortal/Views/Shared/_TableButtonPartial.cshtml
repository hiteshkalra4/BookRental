@model BookRentalPortal.Models.IndividualButtonPartial

@using BookRentalPortal.Models

<td style="width: 400px;">
    <div class="btn-group" role="group">
        @Html.Partial("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
            Action = "Edit",
            ButtonType = "btn-primary",
            Glyph = "pencil",
            Text = "Edit Button",
            GenreId = Model.GenreId,
            BookID = Model.BookID,
            CustomerID = Model.CustomerID,
            MemebershipTypeID = Model.MemebershipTypeID,
            UserId = Model.UserId
        })

        @Html.Partial("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
            Action = "Details",
            ButtonType = "btn-success",
            Glyph = "list",
            Text = "Details",
            GenreId = Model.GenreId,
            BookID = Model.BookID,
            CustomerID = Model.CustomerID,
            MemebershipTypeID = Model.MemebershipTypeID,
            UserId = Model.UserId
        })

        @Html.Partial("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
            Action = "Delete",
            ButtonType = "btn-danger",
            Glyph = "trash",
            Text = "Delete",
            GenreId = Model.GenreId,
            BookID = Model.BookID,
            CustomerID = Model.CustomerID,
            MemebershipTypeID = Model.MemebershipTypeID,
            UserId = Model.UserId
        })
    </div>
</td>


